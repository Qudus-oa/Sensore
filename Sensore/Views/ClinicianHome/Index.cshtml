@{
}
@{
    Layout = "_DashboardLayout";
}

@using Sensore.Models
@{
    ViewData["Title"] = "Clinician Home";
}

<style>
    body {
        background: linear-gradient(135deg, #e8f7f2, #f4fbf9);
    }

    .dashboard-card {
        border-radius: 1rem;
        border: none;
        background: lavender;
        box-shadow: 0 10px 22px rgba(0,0,0,.08);
        transition: all .25s ease;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 16px 30px rgba(0,0,0,.14);
        }
</style>

<!-- LOGOUT (same position as Admin) -->
<div class="d-flex justify-content-end container mt-4">
    <a asp-controller="Account"
       asp-action="Logout"
       class="btn btn-outline-danger">
        Logout
    </a>
</div>

<div class="container py-5">
    <h2 class="mb-4 fw-bold">Clinician Dashboard</h2>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card dashboard-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Patient Data</h5>
                    <p class="text-muted">Analyse pressure distributions.</p>
                    <a class="btn btn-success btn-sm">View Patients</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card dashboard-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Alerts</h5>
                    <p class="text-muted">Monitor high-risk warnings.</p>
                    <a class="btn btn-outline-danger btn-sm">View Alerts</a>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="card dashboard-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Patient Feedback</h5>
                    <p class="text-muted">Review patient comments.</p>
                    <a class="btn btn-outline-secondary btn-sm">View Comments</a>
                </div>
            </div>
        </div>
    </div>
</div>

