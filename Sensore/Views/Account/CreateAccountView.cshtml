@{
}
@model User
<head>
    <style>
        h1 {
            text-align: center;
            color: black;
            font-weight: 100;
            font-size: 20px;
        }

        .sensore {
            font-family: Arial, futura;
            font-size: 60px;
            color: #333;
            font-weight: bold;
            text-align: center;
            display: block;
            color: darkblue;
        }
        
        .form-container {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            margin: 2rem auto;
        }
        
        .login-link {
            text-align: center;
            display: block;
            margin-top: 1rem;
            color: #007bff;
            text-decoration: none;
        }
        
        .login-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body style="background:Lightblue;">
    <span class="sensore">sensore</span>
    <h1> Welcome to sensore </h1>

    <div class="form-container">
        <form asp-action="CreateAccountView" method="post">
            <div class="form-group">
                <label> First name</label>
                <input asp-for="FirstName" class="form-control" maxlength="50"/>
            </div>
            <div class="form-group">
                <label> Last name</label>
                <input asp-for="LastName" class="form-control" maxlength="50"/>
            </div>
            <div class="form-group">
                <label> Email address </label>
                <input asp-for="Email" class="form-control" maxlength="100"/>
            </div>
            <div class="form-group">
                <label> Password </label>
                <input type="Password" class="form-control" maxlength="20"/>
            </div>
            <div class="text-center">
                <input type="submit" value="Create Account" class="btn btn-primary" />
            </div>
        </form>
        
        <a href="/user" class="login-link">Login</a>
    </div>
</body>
