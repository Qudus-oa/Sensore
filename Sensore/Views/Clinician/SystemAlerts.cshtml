@{
    ViewBag.Title = "System Alerts";
    Layout = "~/Views/Shared/_ClinicianLayout.cshtml";
}

<div class="alerts p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">System Alerts</h2>
        <p class="text-muted">Real-time alerts for patient pressure and posture monitoring</p>
    </div>

    <!-- High-level stats (Critical, Warning, etc.) -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card bg-danger text-white text-center rounded-4 shadow-sm p-3">
                <h6 class="fw-semibold mb-1">Critical</h6>
                <h4 class="fw-bold">2</h4>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark text-center rounded-4 shadow-sm p-3">
                <h6 class="fw-semibold mb-1">Warning</h6>
                <h4 class="fw-bold">2</h4>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-primary text-white text-center rounded-4 shadow-sm p-3">
                <h6 class="fw-semibold mb-1">New</h6>
                <h4 class="fw-bold">5</h4>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white text-center rounded-4 shadow-sm p-3">
                <h6 class="fw-semibold mb-1">Acknowledged</h6>
                <h4 class="fw-bold">1</h4>
            </div>
        </div>
    </div>

    <!-- Alerts list -->
    <div id="alertList">

        <!-- 🔴 HIGH RISK: John Smith -->
        <div class="alert-card bg-danger-subtle border border-danger rounded-4 p-4 mb-3 shadow-sm">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h6 class="fw-bold text-danger mb-1">
                        <i class="bi bi-exclamation-triangle"></i> John Smith <span class="text-muted">ID: P001</span>
                        <span class="badge bg-danger ms-2">HIGH RISK</span>
                        <span class="badge bg-primary ms-1">NEW</span>
                    </h6>
                    <p class="mb-1"><strong>Alert Zone:</strong> Zone 5</p>
                    <p class="mb-2"><strong>Pressure Reading:</strong> 95 mmHg</p>
                    <div class="bg-white p-2 rounded-3 border small">
                        <strong>Recommended Actions:</strong>
                        <ul class="mb-0">
                            <li>Immediate patient repositioning required</li>
                            <li>Assess skin condition in affected zone</li>
                            <li>Consider pressure-relief interventions</li>
                        </ul>
                    </div>
                    <small class="text-muted d-block mt-2"><i class="bi bi-clock"></i> Detected: 2:30 PM | Duration: 15 mins</small>
                </div>
                <div class="text-end">
                    <button class="btn btn-success btn-sm rounded-pill mb-1">Acknowledge</button>
                    <button class="btn btn-dark btn-sm rounded-pill">Resolve</button>
                </div>
            </div>
        </div>

