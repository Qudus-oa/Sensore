@{
    ViewBag.Title = "Patient Management";
    Layout = "~/Views/Shared/_ClinicianLayout.cshtml";
}

<div class="patients p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Patient Management</h2>
            <p class="text-muted">Comprehensive patient pressure metrics</p>
        </div>
        <input type="text" class="form-control" placeholder="Search patients..." style="width: 250px;">
    </div>

    <div class="patient-table bg-white rounded-4 shadow-sm p-4">
        <h5 class="fw-semibold mb-3">Patient Overview</h5>
        <p class="text-muted small mb-4">Monitor all patients and their pressure metrics</p>

        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Patient Info</th>
                        <th>Risk Level</th>
                        <th>Peak Pressure</th>
                        <th>PPI</th>
                        <th>Distribution Score</th>
                        <th>Active Alerts</th>
                        <th>Last Reading</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- John Smith -->
                    <tr>
                        <td>
                            <strong>John Smith</strong><br />
                            <small class="text-muted">68y • Room 201A • P001</small>
                        </td>
                        <td><span class="badge bg-danger">HIGH</span></td>
                        <td class="text-danger fw-semibold">95 mmHg</td>
                        <td>1.82</td>
                        <td class="text-danger">48/100</td>
                        <td><span class="badge bg-danger-subtle text-danger">1 Alert</span></td>
                        <td><small class="text-muted">↑ 2 mins ago</small></td>
                        <td>
                            <a asp-controller="Clinician"
                               asp-action="Analytics"
                               asp-route-patientId="P001"
                               asp-route-patientName="John Smith"
                               class="text-success fw-semibold">View Analytics →</a>
                        </td>
                    </tr>

