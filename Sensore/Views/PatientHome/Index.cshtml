@{
}
@{
    Layout = "_DashboardLayout";
}

@using Sensore.Models
@{
    ViewData["Title"] = "Patient Home";
}

<style>
    body {
        background: linear-gradient(135deg, #fff7e6, #fffdf8);
    }

    .dashboard-card {
        border-radius: 1.1rem;
        border: none;
        background: white;
        box-shadow: 0 10px 22px rgba(0,0,0,.08);
        transition: transform .25s ease;
    }

        .dashboard-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 16px 30px rgba(0,0,0,.12);
        }
</style>

<!-- LOGOUT (same position as Admin & Clinician) -->
<div class="d-flex justify-content-end container mt-4">
    <a asp-controller="Account"
       asp-action="Logout"
       class="btn btn-outline-danger">
        Logout
    </a>
</div>

<div class="container py-5">
    <h2 class="mb-4 fw-bold">Patient Dashboard</h2>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card dashboard-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Pressure Heatmap</h5>
                    <p class="text-muted">Visualise pressure patterns.</p>
                    <a class="btn btn-info btn-sm">View Heatmap</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card dashboard-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Alerts</h5>
                    <p class="text-muted">Check pressure warnings.</p>
                    <a class="btn btn-outline-warning btn-sm">View Alerts</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card dashboard-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Feedback</h5>
                    <p class="text-muted">Send comments to clinician.</p>
                    <a class="btn btn-outline-secondary btn-sm">Submit Comment</a>
                </div>
            </div>
        </div>
    </div>
</div>
